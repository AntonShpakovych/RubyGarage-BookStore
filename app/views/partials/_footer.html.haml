%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to t('.navigation_home'), root_path, class: 'nav-link'
          %li
            = link_to t('.navigation_shop'), books_path, class: 'nav-link'
          -if user_signed_in?
            %li
              = link_to t('.navigation_orders'), orders_path, class: 'nav-link'
            %li
              = link_to t('.navigation_settings'), edit_address_path, class: 'nav-link'
      .col-sm-3
        %p.general-nav-mail= t('.email_addres')
        %p.general-nav-number= t('.mobile_number')
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
