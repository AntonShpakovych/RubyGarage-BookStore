%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('.name_app')
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        = render 'partials/mobile/navigation'
      .hidden-xs
        = render 'partials/desktop/navigation'
        %ul.nav.navbar-nav
          %li
            %a{href: "#"}= t('.navigation_home')
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('.navigation_shop')
            %ul.dropdown-menu
              %li
                %a{href: "#"}= t('.sub_navigation_mobile_development')
              %li
                %a{href: "#"}= t('.sub_navigation_photo')
              %li
                %a{href: "#"}= t('.sub_navigation_web_design')
              %li.divider{role: "separator"}
              %li
                %a{href: "#"}= t('.sub_navigation_log_out')
          %li
            %a{href: "#"}= t('.navigation_account')

