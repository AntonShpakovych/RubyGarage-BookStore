%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('.name_app'), root_path, class: 'navbar-brand'
      = link_to cart_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity= @cart_count
    = link_to cart_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity= @cart_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        = render partial: 'partials/mobile/navigation', locals:{ categories: @all_category }
      .hidden-xs
        = render partial: 'partials/desktop/navigation', locals: { categories: @all_category }
