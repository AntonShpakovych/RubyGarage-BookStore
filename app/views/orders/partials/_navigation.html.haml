%p.lead.small.mb-10.visible-xs= t('.sort_by')
.dropdowns.dropdown.general-order-dropdown
  %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    - if current_status
      = t(".#{current_status}")
    -else
      = t('.all_orders')
    %i.fa.fa-angle-down.dropdown-icon.pull-right
  %ul.dropdown-menu
    %li
      = link_to t('.title_queue'), orders_path(status: :in_queue)
    %li
      = link_to t('.title_in_delivery'), orders_path(status: :in_delivery)
    %li
      = link_to t('.title_delivered'), orders_path(status: :delivered)
    %li
      = link_to t('.title_canceled'), orders_path(status: :canceled)
