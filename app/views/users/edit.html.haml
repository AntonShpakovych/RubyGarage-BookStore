#privacy.tab-pane{role: "tabpanel"}
  =render 'addresses/partials/navigation'
  .row.mb-60
  #email_form
    = render partial: 'users/partials/form_email', locals: { email: @email_form.nil? ? current_user : @email_form }
  #password_form
    = render partial: 'users/partials/form_password', locals: { password: @password_form.nil? ? current_user : @password_form }
  #delete_account_form
    = render partial: 'users/partials/form_delete_account', locals: { user: current_user }
