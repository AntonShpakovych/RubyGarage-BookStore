.col-sm-12
  %p.in-gold-500.font-18.mb-25= 'Remove Account'
  .general-settings-btn
    = link_to 'Please Remove My Account', registration_path(resource_name), method: :delete, class: 'btn btn-default mb-20'
  .form-group.checkbox.general-settings-checkbox
    %label.checkbox-label
      %input.checkbox-input#remove-account{type: "checkbox", hidden: "true"}
      %span.checkbox-icon
        %i.fa.fa-check
      %span.checkbox-text= 'I understand that all data will be lost'