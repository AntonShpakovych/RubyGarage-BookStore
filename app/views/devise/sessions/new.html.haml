%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon', method: :post do
      %i.fa.fa-facebook-official
    %p.general-login-text or
    .general-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group.mb-30
          = f.label :email, class: 'control-label input-label'
          = f.email_field :email, autofocus: true, type: 'email', placeholder: 'Email', autocomplete: "email", class: 'form-control'
        .form-group.mb-30
          = f.label :password, class: 'control-label input-label'
          = f.password_field :password, autocomplete: "current-password", type: 'password', placeholder: 'Password', class: 'form-control'
          = link_to 'Forgot password?', new_password_path(resource_name), class: 'help-block in-gold-500'
        
        - if devise_mapping.rememberable?
          .form-group.checkbox.text-center.mb-30
            %label.checkbox-label
              %input.checkbox-input{type: "checkbox", hidden: "true"}
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text Remember me
        .text-center
          = f.submit 'Login', class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    Don't have an Account?
    = link_to 'Sign up', registration_path(resource_name), class: 'in-gold-500'
