%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.default.log_in')
    = link_to user_google_oauth2_omniauth_authorize_path, class: 'general-login-icon', method: :post do
      %i.fa.fa-google
    %p.general-login-text= t('devise.default.or_for_auth')
    .general-form
      = simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
        .form-group.mb-30
          = f.input :email, label_html: { class: 'control-label input-label' },  autofocus: true, type: 'email', placeholder: t('devise.placeholder.email'), autocomplete: "email", input_html: { class: 'form-control' }
        .form-group.mb-30
          = f.input :password, label_html: { class: 'control-label input-label' }, autocomplete: "current-password", type: 'password', placeholder: t('devise.placeholder.password'), input_html: { class: 'form-control' }
          = link_to t('devise.default.devise_forgot_password_title'), new_password_path(resource_name), class: 'help-block in-gold-500'
        - if devise_mapping.rememberable?
          .form-group.checkbox.text-center.mb-30
            %label.checkbox-label
              %input.checkbox-input{type: "checkbox", hidden: "true"}
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text=t ('devise.default.remember_me')
        .text-center
          = f.button :submit, t('devise.default.log_in'), class: 'btn btn-default mb-20'
      %p.general-sign-text.text-center
        =t('devise.default.dont_have_account')
        = link_to t('devise.default.sign_up'), new_user_registration_path, class: 'in-gold-500'
