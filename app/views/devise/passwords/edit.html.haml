.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.default.change_password')
    .general-form
      = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.hidden_field :reset_password_token
        .form-group.mb-30
          = f.input :password, label: t('devise.default.new_password_label'), label_html: { class: 'control-label input-label' }, autofocus: true, type: 'password', placeholder: t('devise.placeholder.password'), autocomplete: "new-password", input_html: { class: 'form-control' } 
        .form-group.mb-30
          = f.input :password_confirmation, label: t('devise.default.confirm_new_password_label'), label_html: { class: 'control-label input-label' }, input_html: { class: 'form-control'}, autocomplete: "new-password", type: 'password', placeholder: t('devise.placeholder.confirm_password')
        .text-center
          = f.button :submit, t('devise.default.change_your_password_submit'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = link_to root_path, class: 'in-gold-500' do
      =t('.default.cansel')
