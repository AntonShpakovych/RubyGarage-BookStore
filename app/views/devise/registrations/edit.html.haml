#privacy.tab-pane{role: "tabpanel"}
  =render 'users/partials/navigation'
  .row.mb-60
    .col-sm-5
      %p.in-gold-500.font-18.mb-25 Email
      .general-form-md
        = simple_form_for resource, as: resource_name, url: user_path(current_user.id), html: { method: :put } do |f|
          .form-group.mb-35
            = f.input :email, label: 'Enter Email', input_html: { id: 'email', class: 'form-control' } , label_html: { class: 'control-label input-label' }, placeholder: "Enter your email", type: 'email', value: ''
          .general-text-align
            = f.button :submit, 'Save', class: 'btn btn-default mb-35'
    .col-sm-5.col-sm-offset-1
      %p.in-gold-500.font-18.mb-25 Password
      .general-form-md.divider-lg-bottom.pb-25
        = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f|
          .form-group.mb-30
            = f.input :current_password, label: 'Old Password', input_html: { id:'oldPassword', class: 'form-control' }, label_html: { class: 'control-label input-label' }, placeholder: 'Old Password', type: 'password'
          .form-group.mb-30
            = f.input :password, label: 'New Password', input_html: { id: 'password', class: 'form-control' }, label_html: { class: 'control-label input-label' }, placeholder: 'New Password', type: 'password'
          .form-group.mb-40
            = f.input :password_confirmation, label: 'Confirm Password', input_html: { id:'confirmPassword', class: 'form-control' }, label_html: { class: 'control-label input-label'}, placeholder: 'Confirm Password', type: 'password'
          .general-text-align
            = f.button :submit, 'Save', class: 'btn btn-default mb-35'
    = render 'users/partials/delete_account'
























