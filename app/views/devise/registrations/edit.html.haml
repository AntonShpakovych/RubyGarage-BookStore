#privacy.tab-pane{role: "tabpanel"}
  =render 'addresses/partials/navigation'
  .row.mb-60
    .col-sm-5
      %p.in-gold-500.font-18.mb-25= t('devise.privacy.global_names.title_email')
      .general-form-md
        = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f|
          .form-group.mb-35
            = f.input :email, label: t('devise.privacy.label.email'), input_html: { id: 'email', class: 'form-control' } , label_html: { class: 'control-label input-label' }, placeholder: t('devise.privacy.placeholder.email'), type: 'email'
          .general-text-align
            = f.button :submit, t('devise.privacy.global_names.button_submit'), class: 'btn btn-default mb-35'
    .col-sm-5.col-sm-offset-1
      %p.in-gold-500.font-18.mb-25=t('devise.privacy.global_names.title_password')
      .general-form-md.divider-lg-bottom.pb-25
        = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f|
          .form-group.mb-30
            = f.input :current_password, label: t('devise.privacy.label.current_password'), input_html: { id:'oldPassword', class: 'form-control' }, label_html: { class: 'control-label input-label' }, placeholder: t('devise.privacy.placeholder.current_password'), type: 'password'
          .form-group.mb-30
            = f.input :password, label: t('devise.privacy.label.password'), input_html: { id: 'password', class: 'form-control' }, label_html: { class: 'control-label input-label' }, placeholder: t('devise.privacy.placeholder.password'), type: 'password'
          .form-group.mb-40
            = f.input :password_confirmation, label: t('devise.privacy.label.password_confirmation'), input_html: { id:'confirmPassword', class: 'form-control' }, label_html: { class: 'control-label input-label'}, placeholder: t('devise.privacy.placeholder.password_confirmation'), type: 'password'
          .general-text-align
            = f.button :submit, t('devise.privacy.global_names.button_submit'), class: 'btn btn-default mb-35'
    .col-sm-12
      %p.in-gold-500.font-18.mb-25= t('devise.privacy.global_names.title_remove_account')
      .general-settings-btn
        = link_to t('devise.privacy.global_names.button_submit_remove_account'), registration_path(resource_name), method: :delete, class: 'btn disabled btn-default mb-20', id: 'button_for_delete_account'
      .form-group.checkbox.general-settings-checkbox
        %label.checkbox-label
          %input.checkbox-input#remove-account{type: "checkbox", hidden: "true"}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text= t('devise.privacy.global_names.span_for_checkbox_for_remove_account')
























