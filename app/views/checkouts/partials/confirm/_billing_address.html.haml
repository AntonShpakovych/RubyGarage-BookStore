.col-sm-3
  %h3.general-subtitle= t('.billing_title')
  %p.general-address
    = t('.full_name', first_name: billing_address.first_name, last_name: billing_address.last_name)
    - if link
      = link_to t('.edit'), checkout_path(state: :address), class: 'general-edit', method: :put 
    %br
    = billing_address.address
    %br
    = billing_address.city
    %br
    = billing_address.country
    %br
    = billing_address.phone
