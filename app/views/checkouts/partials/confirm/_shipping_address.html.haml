.col-sm-3
  %h3.general-subtitle= t('.shipping_title')
  %p.general-address
    = t('.full_name', first_name: shipping_address.first_name, last_name: shipping_address.last_name)
    - if link
      = link_to t('.edit'), checkout_path(state: :address), class: 'general-edit', method: :put
    %br
    = shipping_address.address
    %br
    = shipping_address.city
    %br
    = shipping_address.country
    %br
    = shipping_address.phone
