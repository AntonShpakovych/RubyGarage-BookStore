-books.each do |book|
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        %img=image_tag(book.main_image.url, class: 'img-shadow general-thumbnail-img book-logo_img')
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book_path(book.id), class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            = render partial: 'carts/partials/add_to_cart', locals: { icon: true , book: book}
    .general-thumb-info
      %p.title= book.name
      %p.font-16.in-gold-500= number_to_currency(book.price, unit: t('.unit_for_number_currency'))
      %span.divider-sm
      %p.lead.small= book.all_authors
