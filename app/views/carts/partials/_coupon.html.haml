.col-sm-4
  - if cart.coupon
    %h3= t('.user_already_pass_coupon')
  - else
    = simple_form_for :coupon, url: coupon_path, method: :put do |f|
      = f.input :code, label: t('.enter_your_coupon'), input_html: { class: 'form-control mb-30' }, label_html: { class: 'input-labe' }, placeholder: t('.enter_your_coupon'), type: 'text'
      = f.button :submit, t('.submit_apply_coupon'), class: 'btn btn-primary mb-30'
